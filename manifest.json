{
  "manifest_version": 3,
  "name": "Focus Mode Timer",
  "version": "1.1",
  "description": "Переносит вкладку в чистое окно с неоновой рамкой и таймером.",
  "permissions": [
    "activeTab",
    "scripting",
    "windows"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Запустить фокус-режим",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  }
}